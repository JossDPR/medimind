<div class="custom-confirm">
  <strong><i class="fa-solid fa-pills custom-icon"></i></strong>
  <h1>Nouveau m√©dicament</h1>

  <div data-controller="camera_patient", data-camera-patient-url-value=<%="#{patient_planifications_path(@patient)}"%>>
    <div class="selfie-container" >
      <video class="selfie-video" data-camera-patient-target="cameraScreen"></video>
    </div>

    <div class="buttons_double" data-camera-target="buttonsLvl1">
