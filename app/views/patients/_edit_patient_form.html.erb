<div class="form_card m-4">
  <%= simple_form_for @patient, url: patient_path do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, label: 'Prénom',
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Votre prénom" }%>

      <%= f.input :last_name, label: 'Nom',
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Votre nom" }%>

      <%= f.input :phone_number, label: 'Téléphone',
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Votre numéro de téléphone" }%>

      <%= f.input :email, label: 'E-mail',
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>

      <%= f.input :password, label: 'Mot de passe',
                  required: true,
                  hint: ("#{@minimum_password_length} caractères minimums" if @minimum_password_length),
                  input_html: { autocomplete: "Votre mot de passe" } %>

      <%= f.input :password_confirmation, label: 'Confirmation mot de passe',
                  required: true,
                  input_html: { autocomplete: "Votre mot de passe" } %>
    </div>
</div>

    <div class="buttons_double">
      <%= link_to patient_patient_takes_path(@patient), class: 'b_button' do %>
        <i class="fa-solid fa-chevron-left"></i> Retour
      <% end %>
      <button type="submit"><i class="fa-solid fa-check"></i> Enregistrer</button>
    </div>
  <% end %>
