<h2 class="text-center">Connection</h2>
<div class="default_card">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  label: "Adresse mail",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label: "Mot de passe",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <hr>
    </div>
  <div class="text-center">
    <%= button_tag(type: 'submit', class: "boton-elegante") do %>
      Se connecter
    <% end %>
  </div>
  <% end %>
</div>
<div class="form_card text-center mt-4">
  <a><%= render "devise/shared/links" %></a>
</div>
